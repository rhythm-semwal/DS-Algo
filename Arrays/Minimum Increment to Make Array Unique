# https://leetcode.com/problems/minimum-increment-to-make-array-unique/description/

class Solution:
    def minIncrementForUnique(self, nums: List[int]) -> int:
        # creating a big array so that the below loop does not give out of index if the last element is duplicated
        frequency_array = [0]*(len(nums)+max(nums))

        for num in nums:
            frequency_array[num] += 1

        min_increment = 0

        for i in range(len(frequency_array)):
            if frequency_array[i] > 1:
                duplicate = frequency_array[i] - 1
                frequency_array[i+1] += duplicate
                frequency_array[i] = 1
                min_increment += duplicate

        return min_increment
